 {
  "manifest_version": 2,

  "name": "Facebook Inspector",
  "description": "Block the content you don't want to see without depending on unreliable CW and TW tags. Enter your own keywords to block.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

 // "content_scripts": [{
 // 	"js": ["https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js", "popup.js"],
 // 	"matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"] 
 // }],
 "content_security_policy":"script-src 'self' https://apis.google.com/*; object-src 'self'",
  "permissions": [
    "tabs",
    "bookmarks",
  "http://www.blogger.com/",
  "http://*.google.com/*",
  "http://*.facebook.com/*",
  "unlimitedStorage"
  ]
}