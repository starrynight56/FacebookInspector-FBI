 {
  "manifest_version": 2,

  "name": "Facebook Inspector [FBI]",
  "description": "FBI hides posts on Facebook with certain keywords, labelling them with flagged trigger warnings (TW) or content warnings (CW).",
  "author": "Kevin Chen, Rosanne Hu, Adelaide Oh, Nanxi Liu",
  "version": "1.0",

  "browser_action": {
    "default_title": "Facebook Inspector [FBI]",
    "default_popup": "popup.html"
  },
  "icons": {
  	"16": "icon_16.png",
  	"19": "icon_19.png",
  	"38": "icon_38.png",
  	"48": "icon_48.png",
  	"128": "icon_128.png"
  },

  

 // "content_scripts": [{
 // 	"js": ["https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js", "popup.js"],
 // 	"matches": ["http://www.facebook.com/*", "https://www.facebook.com/*"] 
 // }],

  "permissions": [
    "tabs",
    "bookmarks",
  "http://www.blogger.com/",
  "http://*.google.com/*",
  "http://*.facebook.com/*",
  "unlimitedStorage"
  ]

  
}
